<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/getActList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getActList" />
    <Button
        android:id="@+id/playAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getActList"
        android:text="playAct" />
    <Button
        android:id="@+id/stopAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playAct"
        android:text="stopAct" />
    <Button
        android:id="@+id/getMotorList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopAct"
        android:text="getMotorList" />
    <Button
        android:id="@+id/moveToAbsoluteAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getMotorList"
        android:text="moveToAbsoluteAngle" />
    <Button
        android:id="@+id/moveRefAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moveToAbsoluteAngle"
        android:text="moveRefAngle" />
    <Button
        android:id="@+id/readAbsoluteAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moveRefAngle"
        android:text="readAbsoluteAngle" />
    <Button
        android:id="@+id/setMotorAbsoluteAngles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readAbsoluteAngle"
        android:text="setMotorAbsoluteAngles" />
    <Button
        android:id="@+id/setPowerSaveMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setMotorAbsoluteAngles"
        android:text="setPowerSaveMode" />


</RelativeLayout>
