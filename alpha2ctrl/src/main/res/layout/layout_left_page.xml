<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_black"
    android:orientation="vertical"
    android:weightSum="12.5" >

    <RelativeLayout
        android:id="@+id/lay_head"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/left_menu_bg"
        android:paddingTop="@dimen/input_wifi_edittext_height" >

        <com.ubtechinc.alpha2ctrlapp.widget.RoundImageView
            android:id="@+id/img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:background="@drawable/no_head"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_nick_name_head"
            style="@style/SecondTitleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_head"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:layout_marginTop="@dimen/input_wifi_edittext_margin_right"
            android:minWidth="80dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/left_menu_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_my_robot"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/menu_bg_selector" >

        <ImageView
            android:id="@+id/left_device_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:src="@drawable/robot_pressed" />

        <TextView
            android:id="@+id/left_device_tv"
            style="@style/thirdTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:layout_toRightOf="@id/left_device_icon"
            android:text="@string/left_menu_my_robot"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/devices_name"
            style="@style/smallTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:layout_toRightOf="@+id/left_device_tv"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:layout_marginRight="@dimen/input_wifi_edittext_margin_right"
            android:text="@string/main_page_connect_alpha_tips"
            android:textColor="@color/main_page_select"
            android:singleLine="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/left_device_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/left_menu_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_my_favo"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/vew_spy_2"
        android:layout_weight="1"
        android:background="@drawable/menu_bg_selector" >

        <ImageView
            android:id="@+id/left_myfavo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:src="@drawable/left_icon_collection" />

        <TextView
            android:id="@+id/left_myfavo_tv"
            style="@style/thirdTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:layout_toRightOf="@id/left_myfavo_icon"
            android:text="@string/left_menu_my_like"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/left_myfavo_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/left_menu_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/vew_spy_5"
        android:layout_weight="1"
        android:background="@drawable/menu_bg_selector"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/left_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:src="@drawable/setting_normal" />

        <TextView
            android:id="@+id/setting_text"
            style="@style/thirdTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:layout_toRightOf="@id/left_setting_icon"
            android:text="@string/left_menu_setting"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/setting_text"
            android:layout_alignParentBottom="true"
            android:background="@color/left_menu_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_about"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/vew_spy_4"
        android:layout_weight="1"
        android:background="@drawable/menu_bg_selector" >

        <ImageView
            android:id="@+id/left_about_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:src="@drawable/about_pressed" />

        <TextView
            android:id="@+id/left_about_tv"
            style="@style/thirdTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:layout_toRightOf="@id/left_about_icon"
            android:text="@string/left_menu_about"
            android:textColor="@color/text_black" />
        <ImageView
            android:id="@+id/has_new_icon"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/left_about_tv"
            android:background="@drawable/busy"
            android:layout_alignTop="@id/left_about_tv"
            android:textColor="@color/menu_text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/left_about_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/left_menu_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_contact_us"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/vew_spy_4"
        android:layout_weight="1"
        android:background="@drawable/menu_bg_selector" >

        <ImageView
            android:id="@+id/left_contact_us_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:src="@drawable/ic_contect" />

        <TextView
            android:id="@+id/left_contact_us_tv"
            style="@style/thirdTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
            android:layout_toRightOf="@id/left_contact_us_icon"
            android:text="@string/left_contact_us"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/left_contact_us_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/left_menu_line" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="2.5"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" />

       
 <RelativeLayout
     android:id="@+id/lay_exsit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" 
        
        android:background="#f7f7f8">

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
android:text="@string/left_menu_exsit"
  style="@style/thirdTitleText" 
android:textColor="@color/text_black" />
    </RelativeLayout>
</LinearLayout>