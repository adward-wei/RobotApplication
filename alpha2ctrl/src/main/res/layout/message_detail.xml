<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_page_active_unselect_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_title_heigh"
        layout="@layout/authorize_top_title" />

    <TextView
        android:id="@+id/msg_content"
        style="@style/nomal_text_style"
        android:textSize="@dimen/text_second_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
        android:gravity="left|top"
        android:text=""
         />

    <TextView
        android:id="@+id/time_tv"
        style="@style/nomal_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/input_wifi_edittext_margin_right"
        android:textSize="@dimen/text_third_size"
        android:gravity="left|top"
        android:text=""
        android:textColor="@color/text_gray2" />

    <LinearLayout
        android:id="@+id/authorize_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/btn_cancel_margin"
        android:layout_marginLeft="@dimen/btn_cancel_margin"
        android:layout_marginRight="@dimen/btn_cancel_margin"
        android:layout_marginTop="60dp"
        android:onClick="onBack"
        android:orientation="vertical"
        android:textColor="@color/white"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/btn_accept"
            style="@style/contentTitleText"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_cancel_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/btn_cancel_margin"
            android:layout_marginLeft="@dimen/btn_cancel_margin"
            android:layout_marginRight="@dimen/btn_cancel_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_button_able"
            android:text="@string/authorize_accept"
            android:textColor="@color/text_color_t3" />
        <Button
            android:id="@+id/btn_ignose"
            style="@style/contentTitleText"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_cancel_height"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/btn_cancel_margin"
            android:layout_marginLeft="@dimen/btn_cancel_margin"
            android:layout_marginRight="@dimen/btn_cancel_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_negative_selector"
            android:text="@string/authorize_ingnore"
            android:textColor="@color/text_color_t5" />


    </LinearLayout>

</LinearLayout>