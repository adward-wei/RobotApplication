<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dialog_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_background"
        android:orientation="vertical"
        android:padding="@dimen/input_wifi_edittext_margin_right" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounder_white_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/deletetips"
                style="@style/contentTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/input_wifi_edittext_margin_right"
                android:text="@string/image_delete_phototips"
                android:textColor="#9B9B9B" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:src="#d8d8d8" />

            <TextView
                android:id="@+id/dialog_delete"
                style="@style/thirdTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/input_wifi_edittext_margin_right"
                android:text="@string/common_btn_confirm"
                android:textColor="#ef6668" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/input_wifi_edittext_margin_right"
            android:background="@drawable/rounder_white_bg"
            android:orientation="vertical" >

            <TextView
                style="@style/thirdTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/input_wifi_edittext_margin_right"
                android:text="@string/common_btn_cancel"
                android:textColor="#4a90e2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>