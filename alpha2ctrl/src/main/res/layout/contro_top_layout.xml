<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_ry"
    android:layout_width="@dimen/reomote_center_bg_width"
    android:layout_height="@dimen/remote_center_bg_height"
    android:layout_centerInParent="true" >

    <ImageView
        android:id="@+id/imageView_btn_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/remote_btn_center" />

    <ImageView
        android:id="@+id/direction_up"
        android:layout_width="@dimen/remote_btn_top_width"
        android:layout_height="@dimen/remote_btn_top_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/direction_up_style" />

    <ImageView
        android:id="@+id/direction_left"
        android:layout_width="@dimen/remote_btn_left_width"
        android:layout_height="@dimen/remote_btn_left_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/direction_left_style" />

    <ImageView
        android:id="@+id/direction_down"
        android:layout_width="@dimen/remote_btn_top_width"
        android:layout_height="@dimen/remote_btn_top_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/direction_down_style" />

    <ImageView
        android:id="@+id/direction_right"
        android:layout_width="@dimen/remote_btn_left_width"
        android:layout_height="@dimen/remote_btn_left_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/direction_right_style" />

</RelativeLayout>