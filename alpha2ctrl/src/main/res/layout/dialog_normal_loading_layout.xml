<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:background="@drawable/connect_robot_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_loading_logo"
            android:layout_width="@dimen/btn_go_margin_bottom"
            android:layout_height="@dimen/btn_go_margin_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/list_margin_bottom"
            android:src="@drawable/loading_progress"
            />

        <TextView
            android:id="@+id/tipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_loading_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:text="@string/device_robot_dialog_unstalling"
            android:textSize="@dimen/text_midle_size"/>
    </RelativeLayout>

</RelativeLayout>