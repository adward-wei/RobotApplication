<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d8000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/input_wifi_edittext_margin_right"
        android:src="@drawable/icon_close_diglog" 
        android:id="@+id/btn_close"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_tips"
            style="@style/thirdTitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_image"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/scan_qrcode_tips_margin_top"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/qr_scan_tips"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_msg"
            style="@style/SecondTitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dialog_tips"
            android:layout_marginTop="@dimen/scan_qrcode_tips_margin_top"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/qr_scan_encode_qr"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/alplah_no"
            style="@style/SecondTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#55595c"
            android:visibility="visible" />

        <TextView
            android:id="@+id/scan_tips"
            style="@style/contentTitleText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qrcode_image_margin_top"
            android:layout_below="@id/alplah_no"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/qr_scan_tips"
            android:textColor="#8c94a7"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/button_lay"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_wifi_edittext_height"
            android:layout_below="@id/scan_tips"
            android:layout_marginTop="@dimen/input_wifi_edittext_margin_top"
            android:orientation="horizontal"
            android:weightSum="5" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:id="@+id/btn_comfirm"
                style="@style/SecondTitleText"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_wifi_edittext_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:background="@drawable/btn_button_able"
                android:gravity="center"
                android:text="@string/common_btn_confirm"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>