<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_b6"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input_wifi_edittext_margin_right"
        android:background="@color/bg_color_b3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_action_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_video"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_action_name"
                style="@style/thirdTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="#656c71" />

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/txt_action_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:textColor="@color/text_gray2"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_action_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_action_info"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textColor="@color/txt_hint"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/lay_community"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vew_spi"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/praise_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:paddingBottom="@dimen/input_wifi_edittext_margin_right"
                android:paddingTop="@dimen/input_wifi_edittext_margin_right"
                android:background="@drawable/menu_bg_selector"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_lib_icon_praise" />

                <TextView
                    android:id="@+id/txt_praise"
                    style="@style/smallTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_page_praise"
                    android:textColor="#656c71" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/collect_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:paddingBottom="@dimen/input_wifi_edittext_margin_right"
                android:paddingTop="@dimen/input_wifi_edittext_margin_right"
                android:background="@drawable/menu_bg_selector"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_lib_icon_collect" />

                <TextView
                    style="@style/smallTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_page_collection"
                    android:textColor="#656c71" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareLay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingBottom="@dimen/input_wifi_edittext_margin_right"
                android:paddingTop="@dimen/input_wifi_edittext_margin_right"
                android:background="@drawable/menu_bg_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_lib_share" />

                <TextView
                    style="@style/smallTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_page_share"
                    android:textColor="#656c71" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_download_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:paddingBottom="@dimen/input_wifi_edittext_margin_right"
                android:paddingTop="@dimen/input_wifi_edittext_margin_right"
                android:background="@drawable/menu_bg_selector"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/download_state" />

                <TextView
                    android:id="@+id/btn_downloadTextView"
                    style="@style/smallTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_page_download"
                    android:textColor="#656c71" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
