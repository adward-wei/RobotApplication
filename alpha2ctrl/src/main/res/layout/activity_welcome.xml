<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/img_logo_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:background="@drawable/loading_logo" >
    </ImageView>

    <TextView
        android:id="@+id/date"
        style="@style/SecondTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
      
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/search_item2_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_item2_height"
            android:src="@drawable/welcome_robot" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                style="@style/thirdTitleText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="@string/ui_welcom_bottom"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/app_version"
                style="@style/contentTitleText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textColor="@color/text_gray" />
        </LinearLayout>
    </LinearLayout>
  <TextView

                style="@style/contentTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:textColor="@color/text_gray"
               android:layout_centerHorizontal="true"
                android:text="@string/about_app_coryright"
                android:layout_marginBottom="@dimen/input_wifi_edittext_margin_right"
                android:layout_alignParentBottom="true" />
</RelativeLayout>