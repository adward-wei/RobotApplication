<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android_custom="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/edit_lay"
              android:layout_width="fill_parent"
              android:layout_height="50dp"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="15dp"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/left_menu_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >


            <CheckBox
                android:id="@+id/select_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:button="@drawable/message_checkbox_selector"
                android:clickable="true"
                android:focusable="false"
                />

            <TextView
                style="@style/t2_text_style"
                android:layout_marginLeft="8dp"
                android:text="@string/alarm_remind_select_all"
                />
        </LinearLayout>

        <Button
            android:id="@+id/del_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/text_color_t6"
            android:text="@string/news_button_delete"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>