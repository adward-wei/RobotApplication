<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="alarm_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="alarm_add_prompt_key">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/main_page_active_select</item>
    </style>

    <style name="alarm_add_prompt_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/text_gray2</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="alarm_repeat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="alarm_repeat_prompt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/main_page_active_select</item>
    </style>

    <style name="alarm_repeat_sel_iv">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/selector_alarm_repeat</item>
    </style>

    <style name="alarm_days">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="alarm_days_dummy">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="alarm_days_iv">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/selector_alarm_everyday_circle</item>
    </style>

    <style name="alarm_days_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_title_heigh</item>
        <item name="android:background">#F5F5F7</item>
    </style>

    <style name="titlebar_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/btn_back_margin_left</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="titlebar_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/btn_back_margin_left</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="titlebar_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="titlebar_tv" parent="titlebar_icon">
        <item name="android:textColor">#333333</item>
    </style>

    <style name="titlebar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="titlebar_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#777777</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="alarm_wheel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>